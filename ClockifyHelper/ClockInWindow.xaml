<Window x:Class="ClockifyHelper.ClockInWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClockifyHelper"
        mc:Ignorable="d"
        Title="ClockInWindow" SizeToContent="WidthAndHeight" ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen" Topmost="True" WindowStyle="None">
    <StackPanel>
		<Label Content="Clocking You In" HorizontalAlignment="Center" FontSize="20"/>
		<Image Source="Resources\clockify-logo.png" Width="200"/>
		<Button x:Name="AbortButton" Content="Abort" Margin="4" Foreground="Red" FontWeight="SemiBold"/>
	</StackPanel>
</Window>
